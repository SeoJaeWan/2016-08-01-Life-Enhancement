				printf("           강화에 성공하였습니다.\n\n");

				Sleep(1000);

				printf("           대기업 이사가 되었다!\n\n");

				Sleep(1000);

				Green;

				up += 1;

				Sleep(4000);

				system("cls");

				return;

			}

			else if (num < 5 || num > 1) {

				printf("           강화에 실패했다! 아무일도 없었다! \n");

				Sleep(2000);

				system("cls");

				return;

			}

			else if (num < 2) {

				printf("           강화에 실패했다! 퇴화를 해버렸다..");

				up -= 1;

				Sleep(2000);

				return;

			}

		}

		else if (up == 7) {

			if (num > 4 || num < 10) {

				printf("           강화에 성공하였습니다.\n\n");

				Sleep(1000);

				printf("           대기업 사장이 되었다!\n\n");

				up += 1;

				Sleep(4000);

				system("cls");

				return;

			}

			else if (num < 5 || num > 1) {

				printf("           강화에 실패했다! 아무일도 없었다! \n");

				Sleep(2000);

				system("cls");

				return;

			}

			else if (num < 2) {

				printf("           강화에 실패했다! 퇴화를 해버렸다..");

				up -= 1;

				Sleep(2000);

				system("cls");

				return;

			}

		}

		else if (up == 8) {

			if (num > 4 || num < 10) {

				printf("           강화에 성공하였습니다.\n\n");

				Sleep(1000);

				printf("           대기업 회장이 되었다!\n\n");

				up += 1;

				Sleep(4000);

				system("cls");

				return;

			}

			else if (num < 5 || num > 1) {

				printf("           강화에 실패했다! 아무일도 없었다! \n");

				Sleep(2000);

				system("cls");

				return;

			}

			else if (num < 2) {

				printf("           강화에 실패했다! 퇴화를 해버렸다..");

				up -= 1;

				Sleep(2000);

				system("cls");

				return;

			}

		}

		else if (up == 9) {

			if (num > 4 || num < 10) {

				printf("           강화에 성공하였습니다.\n\n");

				Sleep(1000);

				printf("           국회의원이 되었다!\n\n");

				up += 1;

				Sleep(4000);

				system("cls");

				return;

			}

			else if (num < 5 || num > 1) {

				printf("           강화에 실패했다! 아무일도 없었다! \n");

				Sleep(2000);

				system("cls");

				return;

			}

			else if (num < 2) {

				printf("           강화에 실패했다! 퇴화를 해버렸다..");

				up -= 1;

				Sleep(2000);

				system("cls");

				return;

			}

		}

		else if (up == 10) {

			if (num > 4 || num < 10) {

				printf("           강화에 성공하였습니다.\n\n");

				Sleep(1000);

				printf("           대통령이 되었다!\n\n");

				up += 1;

				Sleep(4000);

				system("cls");

				return;

			}

			else if (num < 5 || num > 1) {

				printf("           강화에 실패했다! 아무일도 없었다! \n");

				Sleep(2000);

				system("cls");

				return;

			}

			else if (num < 2) {

				printf("           강화에 실패했다! 퇴화를 해버렸다..");

				up -= 1;

				Sleep(2000);

				system("cls");

				return;

			}

		}

		else if (up == 11) {

			if (num > 4 || num < 10) {

				printf("           강화에 성공하였습니다.\n\n");

				Sleep(1000);

				printf("           지구를 정복했다!\n\n");

				up += 1;

				Sleep(4000);

				system("cls");

				return;

			}

			else if (num < 5 || num > 1) {

				printf("           강화에 실패했다! 아무일도 없었다! \n");

				Sleep(2000);

				system("cls");

				return;

			}

			else if (num < 2) {

				printf("           강화에 실패했다! 퇴화를 해버렸다..");

				up -= 1;

				Sleep(2000);

				system("cls");

				return;

			}

		}

		else if (up == 12) {

			if (num > 4 || num < 10) {

				printf("           강화에 성공하였습니다.\n\n");

				Sleep(1000);

				printf("           우주로 나가 태양계를 정복했다!\n\n");

				up += 1;

				Sleep(4000);

				system("cls");

				return;

			}

			else if (num < 5 || num > 1) {

				printf("           강화에 실패했다! 아무일도 없었다! \n");

				Sleep(2000);

				system("cls");

				return;

			}

			else if (num < 2) {

				printf("           강화에 실패했다! 퇴화를 해버렸다..");

				up -= 1;

				Sleep(2000);

				system("cls");

				return;

			}

		}

		else if (up == 13) {

			if (num > 4 || num < 10) {

				printf("           강화에 성공하였습니다.\n\n");

				Sleep(1000);

				printf("           은하계를 정복했다!\n\n");

				up += 1;

				Sleep(4000);

				system("cls");

				return;

			}

			else if (num < 5 || num > 1) {

				printf("           강화에 실패했다! 아무일도 없었다! \n");

				Sleep(2000);

				system("cls");

				return;

			}

			else if (num < 2) {

				printf("           강화에 실패했다! 퇴화를 해버렸다..");

				up -= 1;

				Sleep(2000);

				system("cls");

				return;

			}

		}

		else if (up == 14) {

			if (num > 4 || num < 9) {

				printf("           강화에 성공하였습니다.\n\n");

				Sleep(1000);

				printf("           우주를 정복했다!\n\n");

				up += 1;

				Sleep(4000);

				system("cls");

			}

			else if (num < 5 || num > 1) {

				printf("           강화에 실패했다! 아무일도 없었다! \n");

				Sleep(2000);

				system("cls");

				return;

			}

			else if (num < 2) {

				printf("           강화에 실패했다! 퇴화를 해버렸다..");

				up -= 1;

				Sleep(2000);

				system("cls");

				return;

			}

			else if (num > 9) {

				printf("           강화에 실패했다! 이런! 이번인생은 망했다!");

				up = 0;

				Sleep(2000);

				system("cls");

				return;

			}

		}




	}

	else {

		White;

		printf("인생강화의 신 : 처음으로 보내주지!");

		Sleep(2000);

		system("cls");

		return;

	}

}







void error() {

	White;

	printf("※시스템 : 1~4까지 입력해주세요.");

	Sleep(1000);

	system("cls");

	return;

}

void check(int coin) {

	if (coin == 0) {

		White;

		printf("\n\n\n                       ※시스템 : 코인을 모두 잃었습니다. 시공의 폭풍속으로 들어가 코인을 줍고있습니다.");

		Sleep(10000);

		coin += 1;

	}

	return;

}
