void cointhrow() {

	int num, gamble;

	if (coin < 1) {

		printf("\n\n도박사 : ㅉㅉ 1코인도 없는 주제에;; 썩 물러가라!\n\n");

		Sleep(2000);

		system("cls");

		return;

	}

	else {

		Yellow;

		printf("\n\n                                  ★☆★1코인 사용!☆★☆\n\n");

		Sleep(1000);

		White;

		printf("도박사 : 동전의 앞 면이 나올지 뒷면이 나올지 선택 해봐. 맞추면 코인이 2개!\n");

		printf("0. 앞 면 \n");

		printf("1. 뒷 면 \n");

		scanf("%d", &gamble);

		//변경할수도?

		if (gamble == 0 || gamble == 1) {

			coin -= 1;

			num = rand() % 2;

			printf("\n");

			printf("                                        3\n\n"); Sleep(1000); printf("                                        2\n\n"); Sleep(1000); printf("                                        1                                        \n\n"); Sleep(1000);

			printf("\n\n                                    띠리링 ---!\n\n");

			Sleep(2000);

			if (num == 0) {

				printf("도박사 : 동전은 앞면이 나왔습니다!!\n\n");

				Sleep(2000);

			}

			else {

				printf("도박사 : 동전은 뒷면이 나왔습니다!!\n\n");

				Sleep(2000);

			}

			if (num == gamble) {

				printf("도박사 : 칫... 성공!\n");

				printf("※시스템 : 코인을 2개 얻었다!\n\n");

				Sleep(2000);

				coin += 2;

				Sleep(4000);

				system("cls");

				return;

			}

			else {

				printf("도박사 : 요시!!! 실패!\n");

				printf("※시스템 : 코인만 날렸다...\n\n");

				Sleep(4000);

				system("cls");

				return;

			}

		}

		else {

			printf("도박사 : 하..ㅉㅉ 처음으로 돌아합니다.");

			Sleep(2000);

			system("cls");

			return;

		}

	}

}

void coinlotto() {

	int num[5], gamble[5];

	int count = 0, i = 0, a = 0, tmp = 0;

	if (coin < 3) {

		printf("\n\n도박사 : 훠이~ 훠이~ 동전 던지기로 돈벌고 오렴\n\n");

		Sleep(1000);

		system("cls");

		return;

	}

	Yellow;

	printf("\n\n                                  ★☆★3코인 사용!☆★☆\n\n");

	Sleep(1000);

	White;

	printf("도박사 : 인생한방의 길로 오신걸 환영합니다. 인생역전! 도전해보라구!\n");

	printf("도박사 : 복권을 쓰는 법을 설명해주지!\n");

	printf("도박사 : 1부터 20까지 숫자중 5개를 하나씩 입력해! 중복은 거절한다구!\n");

	printf("도박사 : 일치 숫자 0개는 -1 , 1개는 코인 3개 , 2개는 5개 , 3개는 8개 , 4개는 15개! \n");

	printf("도박사 : 전부맞추면?!?!?!\n");

	Sleep(1000);

	printf("도박사 : 50개!!!!!!!!!!!!\n");

	while (1) {

		for (i = 0; i < 5; i++) {

			scanf("%d", &gamble[i]);

			if (gamble[i] > 0 && gamble[i] < 21) {}

			else {

				printf("도박사 : 멍청아!! 1부터 20까지의 숫자를 입력하라고!! 돌아가!");

				Sleep(2000);

				system("cls");

				return;

			}

		}

		for (i = 0; i < 4; i++) {

			for (int s = i + 1; s < 5; s++) {

				if (gamble[i] == gamble[s]) {

					printf("도박사 : 하... 중복 꺼져");

					Sleep(2000);

					system("cls");

					return;

				}

			}

		}

		break;

	}

	coin -= 3;

	while (1) {

		tmp = 0;

		for (i = 0; i < 5; i++) {

			num[i] = rand() % 21;

		}

		for (i = 0; i < 4; i++) {

			for (int s = i + 1; s < 5; s++) {

				if (num[i] == num[s]) {

					tmp += 1;

				}

			}

		}

		if (tmp > 0) {

			continue;

		}

		break;

	}

	for (i = 0; i < 5; i++) {

		for (int j = 0; j < 5; j++) {

			if (num[i] == gamble[j]) {

				count += 1;

			}

		}

	}

	printf("\n==========================\n");

	printf("=     복권 번호 공개     =\n");

	printf("==========================\n");

	for (int a = 0; a < 5; a++) {

		Sleep(1000);

		printf(" %d   ", num[a]);

	}

	printf("\n\n");

	Sleep(2000);

	printf("\n=========================\n");

	printf("=     니 번호 공개      =\n");

	printf("=========================\n");

	for (int a = 0; a < 5; a++) {

		Sleep(1000);

		printf(" %d   ", gamble[a]);

	}

	printf("\n\n");

	Sleep(2000);

	switch (count) {

	case 0:

		printf("도박사 : 니가 맞춘 숫자는 0개!!!!\n");

		Sleep(2000);

		printf("도박사 : 코인은 내가 잘 쓰도록 하지 헿헿");

		Sleep(2000);

		coin -= 1;

		system("cls");

		return;

		break;

	case 1:

		printf("도박사 : 니가 맞춘 숫자는 1개!!!!\n");

		Sleep(2000);

		printf("도박사 : 코인은 내가 잘 쓰도록 하지 헿헿");

		Sleep(2000);

		coin -= 3;

		system("cls");

		return;

		break;

	case 2:

		printf("도박사 : 니가 맞춘 숫자는 2개!!!!\n");

		Sleep(2000);

		printf("도박사 : 칫.. 가져가라구...");

		Sleep(2000);

		coin += 5;

		system("cls");

		return;

		break;

	case 3:

		printf("도박사 : 니가 맞춘 숫자는 3개!!!!\n");

		Sleep(2000);

		printf("도박사 : 칫.. 가져가라구...");

		Sleep(2000);

		coin += 8;

		system("cls");

		return;

		break;

	case 4:

		printf("도박사 : 니가 맞춘 숫자는 4개!!!!\n");

		Sleep(2000);

		printf("도박사 : 칫.. 가져가라구...");

		Sleep(2000);

		coin += 15;

		system("cls");

		return;

		break;

	case 5:

		printf("도박사 : 니가 맞춘 숫자는5개!!!!\n");

		Sleep(2000);

		printf("도박사 : 헛 허헛!");

		Sleep(2000);

		printf("도박사 : 허허허헛!");

		Sleep(2000);

		printf("도박사 : 허허허헛!");

		Sleep(2000);

		printf("쨜랑쨜랑~!");

		Sleep(2000);

		printf("도박사 : ☆★☆★☆★당첨☆★☆★☆★");

		Sleep(2000);

		coin += 50;

		system("cls");

		return;

		break;

	}

}

